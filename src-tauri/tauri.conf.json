{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "memories-frontend",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../.next",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "PORT=8080 pnpm next dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "memories",
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": {
        "csp": "default-src 'self' 'unsafe-eval' data:; connect-src 'self' ws: http://localhost:4001;"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
